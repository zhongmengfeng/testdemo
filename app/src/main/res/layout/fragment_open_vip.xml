<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1040px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="165px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/ic_launcher_round" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="昵称"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="134px"
                        android:gravity="center_vertical"
                        android:text="12个月180元" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#eeeeee" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="134px"
                        android:gravity="center_vertical"
                        android:text="6个月90元" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#eeeeee" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="134px"
                        android:gravity="center_vertical"
                        android:text="3个月50元"
                        android:textColor="#efbf58" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="496px"
            android:layout_marginTop="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20px">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:button="@null"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawablePadding="30px"
                        android:drawableRight="@drawable/vip_chooses"
                        android:text="微信支付"
                        android:textColor="#363636"
                        android:textSize="40px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#eeeeee" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:button="@null"
                        android:text="支付宝支付"
                        android:textColor="#363636"
                        android:textSize="40px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#eeeeee" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:button="@null"
                        android:text="银行卡支付"
                        android:textColor="#363636"
                        android:textSize="40px" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="118px"
                    android:gravity="center"
                    android:text="立即开通" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>